# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# PostgreSQL Database URL
# Format: postgresql+asyncpg://user:password@host:port/database
# Example: postgresql+asyncpg://myuser:mypassword@localhost:5432/intervention_db
DATABASE_URL=your_database_url_here

# n8n Webhook URL for intervention workflow
# This webhook is triggered when a student needs intervention
N8N_WEBHOOK_URL=your_n8n_webhook_url_here

# Allowed CORS Origins
# Comma-separated list of frontend URLs allowed to access the API
# Use "*" for development (allows all origins)
# For production, specify exact URLs:
# ALLOWED_ORIGINS=https://your-app.netlify.app,https://custom-domain.com
ALLOWED_ORIGINS=*

# Production example (replace with your actual Netlify URL after deployment):
# ALLOWED_ORIGINS=https://intervention-engine.netlify.app,http://localhost:19006
